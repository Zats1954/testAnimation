<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageLeft"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/textLeft"
        app:layout_constraintEnd_toStartOf="@+id/textLeft"
        app:layout_constraintTop_toTopOf="@+id/textLeft"
        app:srcCompat="@android:drawable/edit_text" />

    <TextView
        android:id="@+id/textLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="100"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/btnPlay"
        app:layout_constraintEnd_toStartOf="@id/btnPlay"
        app:layout_constraintTop_toTopOf="@id/btnPlay" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlay"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="48dp"
        android:layout_height="39dp"

        android:gravity="center|center_horizontal|center_vertical"
        android:textAlignment="center"
        app:icon="@drawable/ic_baseline_play_arrow_24"
        app:iconGravity="textTop"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="100"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btnPlay"
        app:layout_constraintStart_toEndOf="@id/btnPlay"
        app:layout_constraintBottom_toBottomOf="@id/btnPlay" />

    <ImageView
        android:id="@+id/imageRight"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@id/textRight"
        app:layout_constraintStart_toEndOf="@+id/textRight"
        app:layout_constraintTop_toTopOf="@id/textRight"
        app:srcCompat="@android:drawable/edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>